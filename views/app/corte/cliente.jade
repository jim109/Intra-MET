extends ../../layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 CREACION DE CLIENTES 
		form(action="/app/cliente",method="POST")
			div(class="form-group")
				label(for="cli_nit") Nit
				input(type="text", name="cli_nit", placeholder="Nit de la empresa", id="cli_nit",class="form-control")
			div(class="form-group")
				label(for="cli_razon_social") Razon Social
				input(type="text", name="cli_razon_social", placeholder="Razon Social", id="cli_razon_social",class="form-control")

			div(class="form-group")
				label(for="cli_direccion") Direccion
				input(type="text", name="cli_direccion", placeholder="Direccion Cliente", id="cli_direccion",class="form-control")

			div(class="form-group")
				label(for="cli_email") Email
				input(type="text", name="cli_email", placeholder="Email", id="cli_email",class="form-control")

			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Crear Cliente" class="btn btn-info")